<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>

    </div>
    <div class="d-flex justify-content-end align-items-center">
      <% if (user_id) { %>
      <div class="d-flex flex-row align-items-center">
        <p style="font-size: 15px; margin-bottom: 0px">Logged in as: <b><%= user_id.email %></b></p>
        <form method="POST" action="/logout">
          <button type="submit" class="btn btn-primary" style="margin-left: 10px">Logout</button>
        </form>
      </div>
      <% } else { %>
      <button class="btn btn-primary" style="width: 61.72px"><a style="color: white" href="/login">Login</a></button>
      <button class="btn btn-primary" style="margin-left: 5px"><a style="color: white"
          href="/register">Register</a></button>
      <% } %>
    </div>
  </nav>
</header>